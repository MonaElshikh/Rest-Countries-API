doctype 
html(lang="en")
    head
          meta(charset="UTF-8")
          meta( http-equiv="X-UA-Compatible" content="IE=edge" )
          meta(name="description" content="Bookmark Landing Page | Mona Elshikh ")
          meta(name="viewport" content="width=device-width, initial-scale=1.0")
          include includes/_styles
          title Rest Countries API App | Mona Elshikh 
    body
      header
            h1 Where in the world?
            .theme(data-theme="light") 
                  img(src="dist/images/moon-icon.svg" )
                  span Dark Mode
      div(class="container" role="main")
            .list 
                  .search
                        .by-country
                              img(src="dist/images/search_icon.svg" width="20px" height="20px")
                              input(type="txt" placeholder="Search for a country")
                        .by-region
                              img(src="dist/images/down-arrow.svg")
                              input(list="" type="txt" placeholder="Filter by region")
                              datalist(id="regions-list" )
                  .countries  
            .details
                  .back-btn #[button Back] #[img(src="dist/images/back-arrow.svg")]
                  .content
                        .flag #[img]
                        .data
                              .main-data
                                    h3 name
                                    .native-name
                                          label Native Name:  
                                          span 
                                    .population
                                          label Population:  
                                          span 
                                    .region
                                          label Region:  
                                          span 
                                    .sub-region
                                          label Sub Region: 
                                          span 
                                    .capital
                                          label Capital:  
                                          span 
                              .more-data
                                    .tld
                                        label Top Level Domain:   
                                        span 
                                    .currencies
                                          label Currencies: 
                                          span 
                                    .languages
                                          label Languages: 
                                          span 
                              .border-country
                                    label Border Countries: 
                                    .values

      script(src="dist/js/main.js" ) 
        